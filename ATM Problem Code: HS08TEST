#include<bits/stdc++.h> 
using namespace std;
int main()
{
//TO MAKE cout and cin equals to scanf
	ios_base::sync_with_stdio(false);
	cin.tie(NULL);
	int x;
	float value =0;
	float y;
	cin>>x>>y;
	if(x%5!=0 || x+0.5>y)
	{
		cout<<fixed<<setprecision(2)<<y;
	}
	else if(x%5==0)
	{
		value=y-x-0.50;
		cout<< fixed <<setprecision(3)<<value;
	}
	return 0;
}
